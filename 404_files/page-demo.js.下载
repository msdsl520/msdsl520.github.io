// full-width
$(document).on('click', '.responsive .desktop', function () {
    $('.responsive a').removeClass('current');
    $('#iframe-wrap').removeClass().addClass('full-width');
    $(this).addClass("current");
});

// tablet-width
$(document).on('click', '.responsive .tablet', function () {
    $('#iframe-wrap').removeClass().addClass('tablet-width');
    $('.responsive a').removeClass('current');
    $(this).addClass("current");
});

// mobile-width
$(document).on('click', '.responsive .mobile', function () {
    $('#iframe-wrap').removeClass().addClass('mobile-width');
    $('.responsive a').removeClass('current');
    $(this).addClass("current");
});